<div class="col-xs-12 col-md-9">

  <h2>Sign in</h2>

  <div class="row">
    <div class="col-md-4 col-md-offset4">
      <%= form_for(:session, url: sessions_path) do |f| %>
        <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <div id="sign-in-button">
        <%= f.submit "Sign in", class: "btn btn-primary" %>
      </div>

    <% end %>
    </div>
  </div>
</div>
