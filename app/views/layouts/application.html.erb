<!DOCTYPE html>
<html>
    <head>
        <title>A Pinch of Value</title>
        <%= stylesheet_link_tag    "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>

        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <%= auto_discovery_link_tag :atom, "/feed" %>
        <%= auto_discovery_link_tag :rss, "/feed.rss" %>
    </head>
    <body>

        <div class="container">
            <header class="navbar ">
            <div class="navbar-inner">

                <a class="btn btn-navbar" data-toggle="collapse" data-target="nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <!-- Here Name -->

                <%= link_to "<<= A Pinch of Value =>>", root_path, id: "logo" %>

                <div class="nav-collapse collapse"> 
                    <ul class="nav pull-right">
                        <% if signed_in? %>
                            <li><%= link_to image_tag("add.png", :border=> 0, :class=>"title_icon", :id=>'add-new-post'),     new_post_path %></li>
                            <li><%= link_to image_tag("show_all.png", :border=> 0, :class=>"title_icon", :id=>'show-all-posts'),     posts_path %></li>
                            <li><%= link_to image_tag("open_lock.png", :border=> 0, :class=>"title_icon", :id=>'sign-out'),     signout_path, :id => "signout-link"%></li>
                        <% else %>    
                            <li><%= link_to image_tag("closed_lock.png", :border=> 0, :class=>"title_icon", :id=>'sign-in'),     signin_path %></li>
                        <% end %>
                        <li><%= link_to image_tag("clock.png", :border=> 0, :class=>"title_icon", :id=>'archive'),     archive_path %></li>
                        <li><%= link_to image_tag("rss.png", :border=> 0, :class=>"title_icon", :id=>'feed'),       feed_path%></li>
                    </ul>
                </div>
            </div>
            </header>
        </div>

        <div class="container">
            <hr style="margin-top: 0px; margin-bottom: 20px;">
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %></div>
            <% end %>

            <%= yield %>
            <%= render 'layouts/footer' %>
            <%= debug(params) if Rails.env.development? %>
        </div>

    </body>
</html>
